<h1>Burgers!</h1>

<h2>Eat me!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> borgars/borgar sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Dvoured Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> borgars/borgar sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

