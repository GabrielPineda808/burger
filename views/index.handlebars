<h1 style="margin-left: 400px;">Burger Buffet!</h1>

<div class="row">
  <div class="col-lg-6">
    <div class="card" >
      <div class="card-body">
        <h2>Burgers to Devour!</h2>
        <ul>
          {{#each cats}}
            {{#unless sleepy}}
              {{> cats/cat-block sleep=true}}
            {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  
  <div class="col-lg-6">
    <div class="card" >
      <div class="card-body">
        <h2>Burgers you devoured!</h2>

        <ul>
          {{#each cats}}
            {{#if sleepy}}
              {{> cats/cat-block sleep=false}}
             {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
    
  </div>
</div>

<div style="margin-left: 400px;">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h2>Add a Burger you Like!</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit" class="btn-info rounded-pill">Add a Burger!</button>
      </form>
    </div>
  </div>
  
  
</div>








